<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mywidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:background="@color/whitesmoke">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:background="@color/whitesmoke">
            <Button
                android:id="@+id/btBack"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_default"
                android:background="@drawable/bt_back"/>
            <TextView
                android:id="@+id/tvYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_xl"
                android:layout_marginRight="@dimen/margin_xs"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_xl"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btForward"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_default"
                android:background="@drawable/bt_forward"/>
        </LinearLayout>
        <Button
            android:id="@+id/btWeek"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/btMonth"
            android:layout_centerVertical="true"
            android:text="@string/week"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_xl"
            android:background="@color/maincolor"/>
        <Button
            android:id="@+id/btMonth"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/month"
            android:textStyle="bold"
            android:textSize="@dimen/textsize_xl"
            android:layout_marginRight="@dimen/margin_xs"
            android:background="@color/lightgray"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/maincolor" />
        <ImageView
            android:id="@+id/timetableimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin_xxxs"
            android:scaleType="fitXY"
            android:alpha="0.88"
            />
    <!-- android:scaleType="fitXY"
                 android:alpha="0.88"  -->

</LinearLayout>