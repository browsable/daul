<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/margin_default"
                android:text="daul@"
                android:textSize="@dimen/textsize_xxxl" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
        <RelativeLayout
            android:id="@+id/btSettingVer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_xl"
            android:background="@drawable/bt_click">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/setting_ver"
                android:textSize="@dimen/textsize_xl" />
            <TextView
                android:id="@+id/tvVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/textsize_xl"
                android:textColor="@color/maincolor"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
        <TextView
            android:id="@+id/btSettingGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl"
            android:text="@string/setting_group"
            android:textSize="@dimen/textsize_xl" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
        <TextView
            android:id="@+id/btSettingInit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl"
            android:text="@string/setting_init"
            android:textSize="@dimen/textsize_xl" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/btSettingCalendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl"
            android:text="@string/setting_calendar"
            android:visibility="gone"
            android:textSize="@dimen/textsize_xl" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/btSettingQA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl"
            android:text="@string/QandA2"
            android:textSize="@dimen/textsize_xl" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
    </LinearLayout>

</ScrollView>