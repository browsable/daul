<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF">

    <!--
    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="댓글 V"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textSize="17dp"
        android:textColor="#000000" />
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_l"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_l"
            android:background="@drawable/bg_circle"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="수강신청 요령좀"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="수정"
                    android:layout_marginRight="@dimen/margin_xs"
                    android:background="@drawable/bg_maincolor_round_border"
                    />

                <Button
                    android:id="@+id/btRemove"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/bg_maincolor_round_border"
                    android:layout_marginRight="@dimen/margin_xs"
                    android:text="삭제" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2015.02.02 13:00"
                android:textSize="@dimen/textsize_default"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tvId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="choz@"
                android:textSize="@dimen/textsize_default"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="수강신청 어떻게 해요?"
        android:textSize="@dimen/textsize_l"
        android:padding="@dimen/margin_xxl"
        />

    <ImageView
        android:id="@+id/ivContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_launcher"
        android:padding="@dimen/margin_xxl"
        />
    <LinearLayout
        android:id="@+id/llComment"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_xxl">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="댓글"
            android:textAlignment="center"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:id="@+id/commentIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_action_expand"/>
    </LinearLayout>
</LinearLayout>