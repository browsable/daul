<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/btHoliKo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_cal_holiday_ko"
                android:textSize="@dimen/textsize_xl" />
            <ToggleButton
                android:id="@+id/switch1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn=""
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/ic_switch_on" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
        <RelativeLayout
            android:id="@+id/btLunar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_cal_lunar"
                android:textSize="@dimen/textsize_xl"/>
            <ToggleButton
                android:id="@+id/switch2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn=""
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/ic_switch_off" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
        <RelativeLayout
            android:id="@+id/bt24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_cal_24"
                android:textSize="@dimen/textsize_xl"/>
            <ToggleButton
                android:id="@+id/switch3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn=""
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/ic_switch_off" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
        <RelativeLayout
            android:id="@+id/btSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_cal_sub"
                android:textSize="@dimen/textsize_xl"/>
            <ToggleButton
                android:id="@+id/switch4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn=""
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/ic_switch_off" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
        <RelativeLayout
            android:id="@+id/btRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bt_click"
            android:padding="@dimen/margin_xl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/setting_cal_repeat"
                android:textSize="@dimen/textsize_xl"/>
            <ToggleButton
                android:id="@+id/switch5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textOff=""
                android:textOn=""
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/ic_switch_off" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            />
    </LinearLayout>
</ScrollView>