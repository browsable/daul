<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSelectUniv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_l"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_group_in"
                android:textSize="@dimen/textsize_xl"
                android:layout_marginBottom="@dimen/margin_l"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/setting_group_ver"
                android:textSize="@dimen/textsize_xl"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textsize_xl"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textColor="@color/maincolor"
                android:layout_marginBottom="@dimen/margin_l"
                />
            <TextView
                android:id="@+id/tvVer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maincolor"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:textSize="@dimen/textsize_xl"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_black_bottomline"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/actvUniv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:dropDownHeight="wrap_content"
                    android:hint="@string/univ_search"
                    android:ems="10"
                    android:paddingLeft="@dimen/margin_xs"
                    android:singleLine="true"
                    android:textSize="@dimen/textsize_l" />

                <requestFocus />
                <ToggleButton
                    android:id="@+id/btShowUniv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textOff=""
                    android:textOn=""
                    android:background="@drawable/bt_show" />
                <Button
                    android:id="@+id/btEnter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_action_forward"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/margin_default"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/univ_notice_enroll"
                android:layout_marginBottom="@dimen/margin_xxs"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_default" />
            <TextView
                android:id="@+id/tvHyperText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="end"
                android:text="@string/QandA"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_default"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>