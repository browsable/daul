<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_xxxs"
    android:paddingLeft="@dimen/margin_xs"
    android:paddingRight="@dimen/margin_xs"
    android:paddingBottom="@dimen/margin_xs"
    android:gravity="center_vertical"
    android:background="@drawable/bt_normal"
    >
    <TextView
        android:id="@+id/tvXth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvYMD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transparency"
        android:text="hi"
        android:textSize="@dimen/textsize_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvStartHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:textSize="@dimen/textsize_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:text=":"
            android:textSize="@dimen/textsize_default" />
        <TextView
            android:id="@+id/tvStartMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:textSize="@dimen/textsize_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:text="  ~  "
            android:textSize="@dimen/textsize_default" />
        <TextView
            android:id="@+id/tvEndHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:textSize="@dimen/textsize_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:text=":"
            android:textSize="@dimen/textsize_default" />
        <TextView
            android:id="@+id/tvEndMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:textSize="@dimen/textsize_default" />
    </LinearLayout>
</LinearLayout>