<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_black_bottomline"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/autocomplete_places"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/transparency"
                android:ems="10"
                android:hint="@string/autocomplete_hint"
                android:paddingLeft="@dimen/margin_s"
                android:scrollbars="none"
                android:singleLine="true"
                android:textSize="@dimen/textsize_xl"
                />

            <Button
                android:id="@+id/btClear"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/margin_s"
                android:layout_marginRight="@dimen/margin_s"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_clear" />

            <Button
                android:id="@+id/btSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_s"
                android:background="@drawable/ic_action_search" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <Button
                android:id="@+id/btSavePlace"
                android:layout_width="22dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_s"
                android:layout_marginLeft="@dimen/margin_s"
                android:background="@drawable/ic_accept" />
        </LinearLayout>
</RelativeLayout>