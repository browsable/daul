<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/maincolor" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="시간표"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_xl"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibMenu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparency"
            android:padding="@dimen/margin_l"
            android:scaleType="fitXY"
            android:src="@drawable/bt_menu"
            android:onClick="mOnClick"
            />
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparency"
            android:padding="@dimen/margin_l"
            android:scaleType="fitXY"
            android:src="@drawable/bt_cancel"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            sothree:umanoDragView="@+id/dragView"
            sothree:umanoOverlay="true"
            sothree:umanoPanelHeight="28dp"
            sothree:umanoFadeColor="@color/transparency"
            sothree:umanoShadowHeight="0dp">
                <FrameLayout
                    android:id="@+id/flSurface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical" />
                <requestFocus />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparency"
                android:orientation="vertical"
                android:clickable="false"
                >
                    <TextView
                        android:id="@+id/tvPlus"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/bt_plus"
                        android:layout_gravity="right|top"
                        android:layout_marginRight="@dimen/margin_default"
                        android:scaleType="fitXY"
                        />
                <include
                    layout="@layout/bottom_dialog_main" />
            </LinearLayout>
        </com.sothree.slidinguppanel.SlidingUpPanelLayout>

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" />
        <!-- DrawerLayout segment -->

        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/black"
            android:orientation="vertical" >

            <include
                android:id="@+id/home_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/drawer_main_menu" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>