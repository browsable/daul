<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_black_border"
    android:padding="@dimen/margin_default"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default"
        >
    <TextView
        android:id="@+id/tvMonthDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_xl"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <Button
        android:id="@+id/btDialCancel"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_clear" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="@color/lightgray" />
    <ListView
        android:id="@+id/lv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:divider="@drawable/divider_dash"
        android:dividerHeight="3dp"
        android:overScrollMode="never"
        android:layerType="software"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2.5dp"
        android:background="@color/lightgray" />
    <LinearLayout
        android:id="@+id/llNewEnroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bt_click"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overlapEnroll"
        android:padding="@dimen/margin_s"
        />
    </LinearLayout>
</LinearLayout>