<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rlBar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/whitesmoke" >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_xl"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/llTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            >

            <Button
                android:id="@+id/btBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bt_back"
                android:onClick="mOnClick"
                android:layout_marginRight="@dimen/margin_default"
                />
            <TextView
                android:id="@+id/tvTitleYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_gravity="bottom"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_s"
                android:textStyle="bold" />
            <TextSwitcher
                android:id="@+id/switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                />
            <Button
                android:id="@+id/btForward"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/bt_forward"
                android:onClick="mOnClick"
                android:layout_marginLeft="@dimen/margin_default"
                />

        </LinearLayout>

        <ImageButton
            android:id="@+id/ibMenu"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparency"
            android:padding="@dimen/margin_s"
            android:scaleType="fitXY"
            android:src="@drawable/bt_menu"
            android:onClick="mOnClick"
            />
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparency"
            android:padding="@dimen/margin_default"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btWriteArticle"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_s"
            android:text="글쓰기"
            android:textSize="13dip"
            android:background="@drawable/bg_maincolor_round_border"
            android:visibility="gone"/>
        <RelativeLayout
            android:id="@+id/rlArea"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_default"
            android:visibility="gone">
            <ImageButton
                android:id="@+id/ibfindSchedule"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/transparency"
                android:scaleType="fitXY"
                android:src="@drawable/ic_circlesearch"
                />
            <ImageButton
                android:id="@+id/ibareaSchedule"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/transparency"
                android:scaleType="fitXY"
                android:src="@drawable/ic_write"
                android:visibility="gone"
                android:onClick="mOnClick"
                />
            <ImageButton
                android:id="@+id/ibwriteSchedule"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/transparency"
                android:scaleType="fitXY"
                android:src="@drawable/ic_write"
                />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llSpinner"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_xxxs"
            android:background="@drawable/ic_trian"
            android:orientation="vertical"
            android:scaleType="fitXY"
            android:gravity="top|left"
            >
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/transparency"
                android:spinnerMode="dropdown"
                android:dropDownVerticalOffset="0.45dp"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_alignParentBottom="@+id/rlBar"
        android:background="@color/maincolor"
        />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoDragView="@+id/dragView"
            sothree:umanoOverlay="true"
            sothree:umanoPanelHeight="20dp"
            sothree:umanoFadeColor="@color/transparency"
            sothree:umanoShadowHeight="0dp">
            <LinearLayout
                android:id="@+id/llS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:id="@+id/flSurface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    />
                <requestFocus />
                <FrameLayout
                    android:id="@+id/frame_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparency"
                android:orientation="vertical"
                android:clickable="false"
                android:visibility="gone"
                >
                <include
                    layout="@layout/bottom_dialog_main" />
            </LinearLayout>
        </com.sothree.slidinguppanel.SlidingUpPanelLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|bottom">
            <Button
                android:id="@+id/btPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_plus_off"
                android:layout_marginRight="@dimen/margin_xl"
                android:layout_marginBottom="@dimen/margin_xl"
                android:scaleType="fitXY"
                android:onClick="mOnClick"
                />

        </RelativeLayout>

        <!-- DrawerLayout segment : 항상 맨 아래에 위치해야할 부분-->
        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/black"
            android:orientation="vertical" >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none"
                android:background="@color/drawercolor">
                <include
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    layout="@layout/drawer_main_menu"
                    />
            </ScrollView>
            <LinearLayout
                android:id="@+id/btSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/profilecolor"
                android:gravity="center"
                android:onClick="mOnClick"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginBottom="@dimen/margin_xxs"
                    android:layout_marginRight="@dimen/margin_xs"
                    android:layout_marginTop="@dimen/margin_xxs"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/setting"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_default"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>