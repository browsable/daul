<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llIncludeUniv"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_weight="1"
    android:padding="@dimen/margin_l"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black_bottomline"
        >
        <AutoCompleteTextView
            android:id="@+id/actvSelectUniv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="대학을 검색하세요"
            android:textSize="@dimen/textsize_l"
            android:layout_weight="1"
            android:singleLine="true"
            android:paddingLeft="@dimen/margin_xs"
            android:background="@android:color/white"
            android:dropDownHeight="100dp"
            />

        <requestFocus />
        <Button
            android:id="@+id/btShowUniv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_expand"
            />
        <Button
            android:id="@+id/btEnter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_action_forward"
            android:visibility="gone"
            />
    </LinearLayout>
</LinearLayout>