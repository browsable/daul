<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llIncludeUniv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/bg_lightgray_bottomline"
    android:orientation="vertical"
    android:padding="@dimen/margin_l">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_black_bottomline"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/actvSelectUniv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:dropDownHeight="100dp"
            android:ems="10"
            android:hint="대학을 검색하세요"
            android:paddingLeft="@dimen/margin_xs"
            android:singleLine="true"
            android:textColorHint="@color/dimgray"
            android:textSize="@dimen/textsize_l" />

        <requestFocus />

        <Button
            android:id="@+id/btShowUniv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_expand" />

        <Button
            android:id="@+id/btEnter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_action_forward"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btEnroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/univ_notice_enroll"
            android:textColor="@color/blue"
            android:textSize="@dimen/textsize_s"
            android:layout_marginBottom="@dimen/margin_default"
            android:background="@drawable/bg_blue_bottomline"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>