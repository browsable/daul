<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        >
        <TextView
            android:id="@+id/area_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색범위"
            android:textSize="@dimen/textsize_xxxl"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:padding="@dimen/margin_xxl"
            android:gravity="center_vertical"
            android:entries="@array/area_distance"
            android:spinnerMode="dropdown"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/area_text"
            android:layout_toEndOf="@+id/area_text"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/test2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="amazon"
            android:id="@+id/amazon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <com.daemin.community.lib.ActionSlideExpandableListView
        android:id="@+id/list"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent" />
</LinearLayout>