<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_black_border"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bar"
        android:paddingLeft="@dimen/margin_xl"
        android:background="@color/middlegray"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:text="@string/tvDialRepeat"
        android:textSize="@dimen/textsize_xxl"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_xl"
        android:layout_marginRight="@dimen/margin_xl"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSun"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sun"
                android:textSize="@dimen/textsize_s"
                android:textStyle="bold"
                android:textColor="@color/middlegray"
                />

            <TextView
                android:id="@+id/tvMon"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/mon"
                android:textSize="@dimen/textsize_s"
                android:textColor="@color/middlegray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTue"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tue"
                android:textSize="@dimen/textsize_s"
                android:textColor="@color/middlegray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvWed"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/wed"
                android:textSize="@dimen/textsize_s"
                android:textColor="@color/middlegray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvThr"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/thr"
                android:textSize="@dimen/textsize_s"
                android:textColor="@color/middlegray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFri"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fri"
                android:textSize="@dimen/textsize_s"
                android:textColor="@color/middlegray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSat"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/margin_xxs"
                android:layout_marginRight="@dimen/margin_xxs"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/sat"
                android:textSize="@dimen/textsize_s"
                android:textColor="@color/middlegray"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/repeatGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/repeat_radio0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/repeat_radio0"
                    android:textSize="@dimen/textsize_default" />
                <RadioButton
                    android:id="@+id/repeat_radio1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/repeat_radio1"
                    android:textSize="@dimen/textsize_default" />
                <RadioButton
                    android:id="@+id/repeat_radio2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/week"
                    android:textSize="@dimen/textsize_default" />

                <RadioButton
                    android:id="@+id/repeat_radio3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/month"
                    android:textSize="@dimen/textsize_default" />

                <RadioButton
                    android:id="@+id/repeat_radio4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/year"
                    android:textSize="@dimen/textsize_default" />
            </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:orientation="vertical">
                    <requestFocus/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />
                <LinearLayout
                    android:id="@+id/llWeek"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <EditText
                        android:id="@+id/etWeek"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:maxLength="2"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/everyweek"
                        android:textSize="@dimen/textsize_default" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMonth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <EditText
                        android:id="@+id/etMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:maxLength="2"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_default" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/everymonth"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llYear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <EditText
                        android:id="@+id/etYear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:maxLength="2"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:background="@android:color/white"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/everyyear"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTerm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.8"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/repeat_radio5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/repeat_number"
                    android:textSize="@dimen/textsize_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etTerm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLength="2"
                        android:digits="0123456789"
                        android:inputType="number"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/textsize_default" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/term"
                        android:textSize="@dimen/textsize_default" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_bar"
        android:orientation="horizontal"
        android:background="@drawable/bg_black_border_upper"
        >
        <Button
            android:id="@+id/btDialCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_click"
            android:text="@string/btDialCancel"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_l"
            android:textStyle="bold" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/lightgray" />
        <Button
            android:id="@+id/btDialSetting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_click"
            android:text="@string/btDialSetting"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_l"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>