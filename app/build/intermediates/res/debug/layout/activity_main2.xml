<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/maincolor" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="시간표"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_xl"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/ibMenu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparency"
            android:padding="@dimen/margin_l"
            android:scaleType="fitXY"
            android:src="@drawable/bt_menu" />
        <ImageButton
            android:id="@+id/ibBack"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparency"
            android:padding="@dimen/margin_l"
            android:scaleType="fitXY"
            android:src="@drawable/bt_cancel"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/flSurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="vertical" />

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|bottom" >

            <include layout="@layout/button_main_bottom"
                android:id="@+id/include" />

        </RelativeLayout>

        <!-- DrawerLayout segment -->

        <LinearLayout
            android:id="@+id/left_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/black"
            android:orientation="vertical" >

            <include
                android:id="@+id/home_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/drawer_main_menu" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout><!-- From: file:/C:/daul/app/src/main/res/layout/activity_main2.xml -->