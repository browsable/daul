<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_l"
            android:paddingLeft="@dimen/margin_s"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_black_bottomline"
            >
            <AutoCompleteTextView
                android:id="@+id/actvSelectUniv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="대학을 검색하세요"
                android:textSize="@dimen/textsize_s"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin_xs"
                android:background="@color/white"
                />

            <requestFocus />
            <Button
                android:id="@+id/btShowDropDown1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_expand"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_l"
            android:paddingLeft="@dimen/margin_s"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/bg_black_bottomline">
            <AutoCompleteTextView
                android:id="@+id/actvSelectDep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="학부를 검색하세요"
                android:textSize="@dimen/textsize_s"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin_xs"
                android:background="@color/white"
                />
            <requestFocus />
            <Button
                android:id="@+id/btShowDropDown2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_action_expand"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray" />
    </LinearLayout>

